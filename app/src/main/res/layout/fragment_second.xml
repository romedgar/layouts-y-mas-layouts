<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <ImageView
        android:id="@+id/tracer"
        android:layout_width="183dp"
        android:layout_height="186dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/tracer" />

    <Button
        android:id="@+id/button_overwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overwatch"
        android:layout_below="@id/tracer"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
 />

    <ImageView
        android:id="@+id/destiny"
        android:layout_width="183dp"
        android:layout_height="186dp"
        android:layout_below="@id/button_overwatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/destiny"
        />

    <Button
        android:id="@+id/button_destiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destiny"
        android:layout_below="@id/destiny"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        />


</RelativeLayout>